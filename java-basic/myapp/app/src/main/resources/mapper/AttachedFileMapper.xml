<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AttachedFileDao">

  <resultMap id="AttachedFileMap" type="bitcamp.myapp.vo.AttachedFile">
    <id column="file_no" property="no"/>
    <result column="file_path" property="filePath"/>
    <result column="board_no" property="boardNo"/>

    <association property="boardNo" javaType="bitcamp.myapp.vo.Board">
      <id column="board_no" property="no"/>
    </association>
  </resultMap>

  <insert id="add" parameterType="bitcamp.myapp.vo.AttachedFile">
    insert into board_files(file_path,board_no)
    values(#{filePath},#{boardNo})  <!-- board.no -->
  </insert>

  <insert id="addAll" parameterType="java.util.List">
    insert into board_files(file_path,board_no)
    values(
    <foreach collection="list" item="item" separator=",">
      #{filePath},#{boardNo}  <!-- board.no -->
    </foreach>
    )
  </insert>

  <delete id="delete" parameterType="int">
    delete from board_files where file_no=#{value}
  </delete>

  <delete id="deleteAll" parameterType="int">
    delete from board_files where board_no=#{value}
  </delete>

  <select id="findAllByBoardNo" resultMap="AttachedFileMap" parameterType="int">
    select
      file_no,
      file_path,
      board_no
    from
      board_files
    where
      board_no=?
    order by
      file_no asc
  </select>
</mapper>
